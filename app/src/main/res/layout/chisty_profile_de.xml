
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andrioid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tools:context=".MainActivity"
    android:background="#070707">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:background="@drawable/banner" />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="122dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:id="@+id/profile_pic"
                android:background="@drawable/per_son" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="Isha Hammam"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#1ea9d7"
                android:ems="10"
                android:id="@+id/editName"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="#2c2e3c">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:text="Myself"
                android:textColor="#818bf3"
                android:id="@+id/person"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:password="false"
                android:padding="@dimen/activity_horizontal_margin" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:text="Age 22"
                android:textColor="#0d8727"
                android:id="@+id/age"
                android:gravity="center_horizontal"
                android:padding="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/helth_condition"
                    android:onClick="hel_con"
                    android:background="@drawable/health_condition"
                    android:clickable="true" />

                <Space
                    android:layout_width="10px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/diet_condition"
                    android:onClick="diet"
                    android:background="@drawable/diet_chart"
                    android:adjustViewBounds="false"
                    android:cropToPadding="true"
                    android:clickable="true" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10px" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/doctors_managemnet"
                    android:onClick="doc"
                    android:background="@drawable/doctor_managment"
                    android:clickable="true" />

                <Space
                    android:layout_width="10px"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:id="@+id/vacc_ce"
                    android:background="@drawable/vac_cr"
                    android:onClick="vac"
                    android:clickable="true" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>
